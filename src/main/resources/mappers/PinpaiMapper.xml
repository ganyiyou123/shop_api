<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gyy.dao.PinpaiDao">

    <select id="queryCount" parameterType="com.gyy.entity.vo.ReponseData" resultType="java.lang.Integer">
      select count(*) from shop_pinpai where isDel=1

      <if test="name!=null and name!=''">
          and name like "%"#{name}"%"
      </if>

    </select>

    <select id="queryDatas" parameterType="com.gyy.entity.vo.ReponseData" resultType="com.gyy.entity.po.Pinpai">
        select * from shop_pinpai where isDel=1
        <if test="name!=null and name!=''">
            and name like "%"#{name}"%"
        </if>
        order by ord desc
        limit ${size*(currPage-1)},#{size}

    </select>
</mapper>
